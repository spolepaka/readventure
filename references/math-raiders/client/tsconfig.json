{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "allowImportingTsExtensions": true,
        
        // Pragmatic strict flags - catch real bugs without boilerplate
        // noImplicitOverride disabled: SpacetimeDB codegen doesn't emit 'override' keyword
        "noImplicitOverride": false,
        "useUnknownInCatchVariables": false, // Keep as 'any' for easier error handling
        
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src"],
    "exclude": ["src/spacetime"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
